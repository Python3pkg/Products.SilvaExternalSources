<html tal:omit-tag=""
  tal:define="
    view here;
    model request/model;    
    mangle modules/Products/Silva/mangle;
    root_url model/get_root_url;
    title model/get_title_editable;
    vein string:editor;
    "
  i18n:domain="silva">

<metal:use-macro use-macro="view/macro_asset_edit/macros/editor">

<metal:fill-slot fill-slot="additional_tools">

<!-- Settings FORM -->

<form method="POST"
  name="form"
  action="."
  enctype="multipart/form-data">
  <table class="listing">
    <thead>
      <tal:block replace="nothing">
        ______________ top controls row ______________
      </tal:block>
      <tr class="top-controls">
        <td colspan="3">
          <h3 i18n:translate="">
            character coding 
          </h3>
        </td>
      </tr>
    </thead>
    <tbody tal:define="fields view/charset_form/get_fields">
      <tr>
        <th class="align-right"
          width="12%"
          i18n:translate="">
          element
        </th>
        <th i18n:translate="">
          content
        </th>
        <th width="40%" i18n:translate="">
          note
        </th>
      </tr>
      <tal:repeat repeat="field fields">
        <tal:define define="iterate repeat/field/odd">
          <tr tal:attributes="class python:iterate and 'odd' or 'even'">
            <td class="field-title">
              <tal:block tal:content="structure field/title">"
              </tal:block><span class="warning"
                tal:condition="field/is_required">*</span>
            </td>
            <td>
              <input tal:replace="structure python:field.render_from_request(request)" />
            </td>
            <td>
              <tal:block i18n:translate="" tal:content="structure python:field.get_value('description')">
              </tal:block>
            </td>
          </tr>
        </tal:define>
      </tal:repeat>
    </tbody>
    <tfoot>
      <tr class="controls">
        <td class="align-right"
          colspan="3">
          <input class="button"
            type="submit"
            name="charset_submit:method"
            value="set encoding"
            title="access key: alt-e"
            accesskey="e"
            i18n:attributes="title value"
          />
        </td>
      </tr>
    </tfoot>
  </table>
</form>
  <!-- UPLOAD FORM -->
  
  <form method="POST"
    name="form"
    action="."
    enctype="multipart/form-data">
    <table class="listing">
      <thead>
        <tal:block replace="nothing">
          ______________ top controls row ______________
        </tal:block>
        <tr class="top-controls">
          <td colspan="3">
            <h3 i18n:translate="">
              csv source upload
            </h3>
          </td>
        </tr>
      </thead>
      <tbody tal:define="fields view/upload_form/get_fields">
        <tr>
          <th class="align-right"
            width="12%"
            i18n:translate="">
            element
          </th>
          <th i18n:translate="">
            content
          </th>
          <th width="40%" i18n:translate="">
            note
          </th>
        </tr>
        <tal:repeat repeat="field fields">
          <tal:define define="iterate repeat/field/odd">
            <tr tal:attributes="class python:iterate and 'odd' or 'even'">
              <td class="field-title">
              <tal:block tal:content="structure field/title">
              </tal:block><span class="warning"
                tal:condition="field/is_required">*</span>
              </td>
              <td>
                <input tal:replace="structure python:field.render_from_request(request)" />
              </td>
              <td>
                <tal:block i18n:translate="" tal:content="structure python:field.get_value('description')">
                </tal:block>
              </td>
            </tr>
          </tal:define>
        </tal:repeat>
      </tbody>
      <tfoot>
        <tr class="controls">
          <td class="align-right"
            colspan="3">
            <input class="button"
              type="submit"
              name="upload_submit:method"
              value="upload"
              title="access key: alt-u"
              accesskey="u"
              i18n:attributes="title value"
            />
          </td>
        </tr>
      </tfoot>
    </table>
  </form>

  <!-- RAW DATA FORM -->

  <form method="POST"
    name="form"
    action="."
    enctype="multipart/form-data">
    <table class="listing">
      <thead>
        <tal:block replace="nothing">
          ______________ top controls row ______________
        </tal:block>
        <tr class="top-controls">
          <td colspan="2">
            <h3 i18n:translate="">
              comma separated value data
            </h3>
          </td>
        </tr>
      </thead>
      <tbody tal:define="fields view/rawdata_form/get_fields">
        <tr>
          <th class="align-right"
            width="5%"
            i18n:translate="">
            element
          </th>
          <th i18n:translate="">
            content
          </th>
        </tr>
        <tal:repeat repeat="field fields">
          <tal:define define="iterate repeat/field/odd">
            <tr tal:attributes="class python:iterate and 'odd' or 'even'">
              <td class="field-title">
                <tal:block tal:content="structure field/title">
                </tal:block><span class="warning"
                  tal:condition="field/is_required">*</span>
              </td>
              <td>
                <input tal:replace="structure python:field.render_from_request(request)" />
              </td>
            </tr>
          </tal:define>
        </tal:repeat>
      </tbody>
      <tfoot>
        <tr class="controls">
          <td class="align-right"
            colspan="2">
            <input class="button"
              type="submit"
              name="rawdata_submit:method"
              value="change data"
              title="access key: alt-c"
              accesskey="c"
              i18n:attributes="title value"
            />
          </td>
        </tr>
      </tfoot>
    </table>
  </form>

</metal:fill-slot>

</metal:use-macro>
</html>
