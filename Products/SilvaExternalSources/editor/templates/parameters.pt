<form i18n:domain="silva"
      class="external_source_fields">
  <style type="text/css" media="all">
    .external_source_edit, .external_source_add {
       max-height: 500px;
       overflow-y: auto;
    }
    .external_source_field {
       position: relative;
    }
    .external_source_fields label .description {
       border: 1px solid black;
       text-align: left !important;
       display: none;
       left: 10%;
       padding: 0.25em;
       position: absolute;
       top: 1.1em;
       white-space: normal;
       width: 60%;
       z-index: 2;
    }
    .external_source_fields label:hover .description {
       display: block;
    }
    .external_source_error {
       font-weigth: bold;
       color: red;
       display: block;
    }
  </style>
  <div role="presentation"
       class="cke_dialog_ui_vbox_child external_source_field"
       tal:repeat="field rest/fields">
    <label class="#" for="#"
           tal:attributes="class field/label_class;
                           for field/id">
      <span class="description cke_light_background"
            tal:content="field/description"
            tal:condition="field/description">
        Description
      </span>
      <tal:label tal:replace="field/title" />
    </label>
    <div role="presentation" class="cke_dialog_ui_labeled_content"
         tal:content="structure field/widget">
    </div>
  </div>
  <span tal:condition="not:rest/fields"
        i18n:translate="">
    This External Source has no adjustable settings.
  </span>
</form>
